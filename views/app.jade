doctype html
html(ng-app='WorldlyWisdom')
  head
    title The Art of Worldly Wisdom

    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(charset='utf-8')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //[if lt IE 9]
      script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
      script(src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")

    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css")
    link(rel='stylesheet',href='/css/app.css')
  body(ng-cloak)
    #container(ng-controller="AppCtrl")
      #menu(ng-controller="MenuCtrl")

      #main(ng-controller="MainCtrl")
        .maxim(ng-view)

    //- Libraries
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-touch.min.js')

    //- App Specific
    script(src='/js/app.js')
    script(src='/js/controllers/AppCtrl.js')
    script(src='/js/controllers/MenuCtrl.js')
    script(src='/js/controllers/MainCtrl.js')